<body>
<div class="login-form">

    <div class = "logo-section">
        <img width = "70" height ="110" class ="login-logo" src="{{ asset('bundles/presentation/img/logo_white.png') }}">
    </div>
    {{ form_start(form, {'method': 'POST', 'id': 'loginform'}) }}

        {% if form_errors(form) is not empty %}
            <div class="alert-container"><i class="fa fa-warning"></i> Invalid Credentials !</div>
        {% endif %}

        <div class="form-group ">
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'autocomplete':'off','placeholder': 'Email'} }) }}
            <i class="fa fa-user"></i>
        </div>

        <div class="form-group log-status">
            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Password'} }) }}
            <i class="fa fa-lock"></i>
        </div>
        <div class ="form-group text-right">
            <a class="link" href="#">Lost your password?</a>
        </div>
        <div class ="log-btn-container">
            <button type="submit"  class="log-btn"> Login
            </button>
        </div>
    {{ form_end(form, {'render_rest': false}) }}
</div>
